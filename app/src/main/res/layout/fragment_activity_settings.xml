<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.activity_settings.ActivitySettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/text_activity_settings"
            android:textColor="@color/on_background_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/title_activity_price"
            android:textAlignment="center"
            android:textColor="@color/on_background_text"
            android:textSize="@dimen/title_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_activity_price_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:hint="@string/hint_min_price"
                android:padding="0dp"
                app:boxCornerRadiusBottomEnd="@dimen/input_layout_corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/input_layout_corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/input_layout_corner_radius"
                app:boxCornerRadiusTopStart="@dimen/input_layout_corner_radius"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <EditText
                    android:id="@+id/et_activity_price_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:autofillHints=""
                    android:fontFamily="@font/inter_medium"
                    android:inputType="number|numberDecimal"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_activity_price_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:hint="@string/hint_max_price"
                android:padding="0dp"
                app:boxCornerRadiusBottomEnd="@dimen/input_layout_corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/input_layout_corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/input_layout_corner_radius"
                app:boxCornerRadiusTopStart="@dimen/input_layout_corner_radius"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <EditText
                    android:id="@+id/et_activity_price_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:autofillHints=""
                    android:fontFamily="@font/inter_medium"
                    android:inputType="number|numberDecimal"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_activity_price_exact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clipToPadding="false"
            android:hint="@string/hint_exact_price"
            android:padding="0dp"
            app:boxCornerRadiusBottomEnd="@dimen/input_layout_corner_radius"
            app:boxCornerRadiusBottomStart="@dimen/input_layout_corner_radius"
            app:boxCornerRadiusTopEnd="@dimen/input_layout_corner_radius"
            app:boxCornerRadiusTopStart="@dimen/input_layout_corner_radius"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <EditText
                android:id="@+id/et_activity_price_exact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:autofillHints=""
                android:fontFamily="@font/inter_medium"
                android:inputType="number|numberDecimal"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/title_activity_accessibility"
            android:textAlignment="center"
            android:textColor="@color/on_background_text"
            android:textSize="@dimen/title_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_activity_accessibility_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:hint="@string/hint_min_accessibility"
                android:padding="0dp"
                app:boxCornerRadiusBottomEnd="@dimen/input_layout_corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/input_layout_corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/input_layout_corner_radius"
                app:boxCornerRadiusTopStart="@dimen/input_layout_corner_radius"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <EditText
                    android:id="@+id/et_activity_accessibility_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:autofillHints=""
                    android:fontFamily="@font/inter_medium"
                    android:inputType="number|numberDecimal"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_activity_accessibility_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:hint="@string/hint_max_accessibility"
                android:padding="0dp"
                app:boxCornerRadiusBottomEnd="@dimen/input_layout_corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/input_layout_corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/input_layout_corner_radius"
                app:boxCornerRadiusTopStart="@dimen/input_layout_corner_radius"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <EditText
                    android:id="@+id/et_activity_accessibility_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:autofillHints=""
                    android:fontFamily="@font/inter_medium"
                    android:inputType="number|numberDecimal"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_activity_accessibility_exact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clipToPadding="false"
            android:hint="@string/hint_exact_accessibility"
            android:padding="0dp"
            app:boxCornerRadiusBottomEnd="@dimen/input_layout_corner_radius"
            app:boxCornerRadiusBottomStart="@dimen/input_layout_corner_radius"
            app:boxCornerRadiusTopEnd="@dimen/input_layout_corner_radius"
            app:boxCornerRadiusTopStart="@dimen/input_layout_corner_radius"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <EditText
                android:id="@+id/et_activity_accessibility_exact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:autofillHints=""
                android:fontFamily="@font/inter_medium"
                android:inputType="number|numberDecimal"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/title_activity_participants"
            android:textAlignment="center"
            android:textColor="@color/on_background_text"
            android:textSize="@dimen/title_text_size" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_activity_participants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clipToPadding="false"
            android:hint="@string/title_activity_participants"
            android:padding="0dp"
            app:boxCornerRadiusBottomEnd="@dimen/input_layout_corner_radius"
            app:boxCornerRadiusBottomStart="@dimen/input_layout_corner_radius"
            app:boxCornerRadiusTopEnd="@dimen/input_layout_corner_radius"
            app:boxCornerRadiusTopStart="@dimen/input_layout_corner_radius"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <EditText
                android:id="@+id/et_activity_participants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:autofillHints=""
                android:fontFamily="@font/inter_medium"
                android:inputType="number|numberDecimal"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_activity_save_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/text_save_changings"
            android:textColor="@color/btn_text"
            app:cornerRadius="@dimen/btn_corner_radius" />
    </LinearLayout>
</ScrollView>